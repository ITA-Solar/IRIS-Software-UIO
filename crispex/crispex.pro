  ENDIF ELSE $
		XYOUTS, (*(*info).plotpos).loopxplspw/2.+(*(*info).plotpos).loopx0,$
            (*(*info).plotpos).loopyplspw/2.+(*(*info).plotpos).loopy0,$
            'No space-time diagram availabe !C for current path', COLOR = 255, $
            ALIGNMENT = 0.5, CHARSIZE=1.2, /NORMAL
