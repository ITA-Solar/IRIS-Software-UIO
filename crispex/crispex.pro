    SENSITIVE=((*(*info).intparams).ndisp_diagnostics NE $
               (*(*info).intparams).ndiagnostics), $
    SET_BUTTON=((*(*info).intparams).ndisp_diagnostics EQ $
                (*(*info).intparams).ndiagnostics)
  ; Adjust label text depending on whether all or some are displayed
