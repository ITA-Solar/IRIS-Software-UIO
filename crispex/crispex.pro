          (*(*(*(*info).loopsdata).rest_loopslab[k]))[*,*,(*(*info).dataparams).lp_ref-$
				    (*(*info).dispparams).lp_ref_low] $
      ELSE $
        *(*(*(*info).loopsdata).rest_loopslice[k]) = $
          (*(*(*(*info).loopsdata).rest_loopslab[k]))[*,*,(*(*info).dataparams).lp-$
            (*(*info).dispparams).lp_low]
