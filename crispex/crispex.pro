      IF ((*(*info).dispswitch).scalestokes[0] AND $
          (wheres[i] NE 0)) THEN BEGIN
        cont_slice = FLOAT(REBIN((*(*(*info).data).ssp_cur[0])[$
          (*(*info).stokesparams).contpos[0],*],$
