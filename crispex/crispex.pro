    (*(*info).winids).intwintitle]
	wherenot0 = WHERE(tlbarr NE 0, count)
	IF ((*(*info).winswitch).dispwids AND (count GT 0)) THEN BEGIN
		FOR i=0,count-1 DO $
      WIDGET_CONTROL,tlbarr[wherenot0[i]], $
