          cont_slice = CRISPEX_SCALING_DESCALE(cont_slice, $
            (*(*info).dispparams).imbscale, (*(*info).dispparams).imbzero)
        ssp /= cont_slice
      ENDIF
      (*(*info).data).ssp_cur[i] = PTR_NEW(ssp)
    ENDFOR
  ENDIF
END

