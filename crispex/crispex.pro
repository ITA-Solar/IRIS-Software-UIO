	WIDGET_CONTROL, event.TOP, GET_UVALUE = info
	IF (TOTAL(((*(*info).feedbparams).verbosity)[2:3]) GE 1) THEN $
    CRISPEX_VERBOSE_GET_ROUTINE, event, /IGNORE_LAST
  IF (KEYWORD_SET(DISP) OR KEYWORD_SET(KILL)) THEN BEGIN
