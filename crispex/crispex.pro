        *(*(*(*info).loopsdata).rest_loopslice[k]) = $
          REFORM(*(*(*(*info).loopsdata).rest_loopslice[k]))
		ENDIF ELSE BEGIN
			IF (*(*(*info).restoreparams).disp_imref)[k] THEN $
        *(*(*(*info).loopsdata).rest_loopslice[k]) = *(*(*(*info).loopsdata).rest_loopslab[k]) $
      ELSE $
				*(*(*(*info).loopsdata).rest_loopslice[k]) = *(*(*(*info).loopsdata).rest_loopslab[k])
