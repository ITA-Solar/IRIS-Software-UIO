  			ENDIF
  			CRISPEX_WINDOW_USER_FEEDBACK_CLOSE, event, /SESSION
  			(*(*(*info).sesparams).sessions)[WHERE(*(*(*info).sesparams).sessions EQ 1)] = 0
  		ENDIF ELSE BEGIN
  			CRISPEX_WINDOW_USER_FEEDBACK_CLOSE, event, /SESSION
  			CRISPEX_WINDOW_OK, event,'ERROR!',$
          'Unable to restore earlier session due to incompatibility '+$
