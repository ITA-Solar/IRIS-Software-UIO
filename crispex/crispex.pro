  IF ~KEYWORD_SET(REFERENCE) THEN BEGIN
    ns = hdr.ns
    nt = hdr.mainnt
    nlp = hdr.nlp
    lc = hdr.lc
    ms = hdr.ms
    nt_other = hdr.mainnt
    tsel_scaling = hdr.tsel_scaling_main
