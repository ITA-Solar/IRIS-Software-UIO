		(*(*info).winsizes).refspxres = refspxres		& 	(*(*info).winsizes).refspyres = refspyres
		(*(*info).plotpos).refspx0 = refspx0			&	(*(*info).plotpos).refspx1 = refspx1
		(*(*info).plotpos).refspy0 = refspy0			&	(*(*info).plotpos).refspy1 = refspy1
