  		ENDIF ELSE RETURN
    ENDIF
		IF (((*(*info).feedbparams).verbosity)[3] EQ 1) THEN $
      CRISPEX_VERBOSE_GET, event, $
        [(*(*info).detparams).nr_sel_loops,(*(*info).savswitch).cont],$
        labels=['Number of detections','Saving procedure']
	ENDIF
