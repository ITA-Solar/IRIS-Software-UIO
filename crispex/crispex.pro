  IF ((*(*info).plotparams).imct[0] NE 0) THEN LOADCT, 0, /SILENT
	IF (((*(*info).feedbparams).verbosity)[3] EQ 1) THEN $
    CRISPEX_VERBOSE_GET, event, [(*(*info).winids).imwid,curscolor], $
