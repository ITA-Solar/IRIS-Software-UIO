          *(*(*info).overlayparams).syr_ref, /DEVICE, COLOR=!P.COLOR, PSYM=3, $
          THICK=thick $
  		ELSE $
        PLOTS,*(*(*info).overlayparams).sxr_ref,$
          *(*(*info).overlayparams).syr_ref,/DEVICE, COLOR=!P.COLOR, $
          LINESTYLE=(*(*info).overlayparams).loop_linestyle, THICK=thick
    ; ... in SJI window
